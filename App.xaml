<Application x:Class="WPFTamplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFTamplate"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="GradientButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Name="MainBorder" CornerRadius="10">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop x:Name="UpGrad" Color="MediumSeaGreen" Offset="0" />
                                        <GradientStop x:Name="DownGrad" Color="GreenYellow" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <StopStoryboard BeginStoryboardName="PressedStoryboard" />
                                        <StopStoryboard BeginStoryboardName="EnableStoryboard" />
                                        <StopStoryboard BeginStoryboardName="PressedStoryboardEnd" />
                                        <BeginStoryboard x:Name="MouseOverStoryboard">
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="GreenYellow"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <StopStoryboard BeginStoryboardName="PressedStoryboard" />
                                        <StopStoryboard BeginStoryboardName="EnableStoryboard" />
                                        <StopStoryboard BeginStoryboardName="PressedStoryboardEnd" />
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="GreenYellow"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard x:Name="PressedStoryboard">
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard x:Name="PressedStoryboardEnd">
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="GreenYellow"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="Gray"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="LightGray"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard x:Name="EnableStoryboard">
                                            <Storyboard>
                                                <ColorAnimation
                                            Storyboard.TargetName="UpGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="MediumSeaGreen"
                                            Duration="0:0:0.2"
                                            />
                                                <ColorAnimation
                                            Storyboard.TargetName="DownGrad"
                                            Storyboard.TargetProperty="Color" 
                                            To="GreenYellow"
                                            Duration="0:0:0.2"
                                            />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
